<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/selector_container_square_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingSizeX1"
        android:paddingTop="@dimen/paddingSizeX2"
        android:paddingRight="@dimen/paddingSizeX1"
        android:paddingBottom="@dimen/paddingSizeX2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSizeM"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="full/name"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/textSizeM" />

        </LinearLayout>

        <TextView
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/paddingSizeX1"
            android:gravity="end"
            android:text="96246"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSizeM" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/stars_black_24dp"
            android:tint="@color/colorPrimaryDark" />

    </LinearLayout>

</layout>